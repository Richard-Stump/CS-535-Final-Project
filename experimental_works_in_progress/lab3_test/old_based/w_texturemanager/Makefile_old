# examples/fontm/Makefile - Makefile for "fontm" example.
#

EE_BIN  = ./out/main.elf
EE_OBJS = ./src/main.o
EE_OBJS += ../../globals/vu1/draw_3D.o
EE_OBJS += ./src/oldCamera.o
# EE_OBJS += ./src/memalign_util.o
EE_OBJS += ./src/TexturedCubeMesh.o
EE_OBJS += ../../globals/src/PS2Pad.o
EE_OBJS += ./src/TexturedShape.o
# EE_OBJS += ./src/Shape.o
# EE_OBJS += ./src/font.o
# EE_OBJS += ./src/ref_ps2.o
EE_ISO = ./out/main.iso
EE_DVP = dvp-as

include ./Makefile.global
include ./Makefile.pref

iso:
	mkisofs -o $(EE_ISO) ./out

run:
	pcsx2 $(EE_BIN)

%.o: %.vsm
	$(EE_DVP) $< -o $@

rebuild:
	make clean
	make all
	make iso
	make run
